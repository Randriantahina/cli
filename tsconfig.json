{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2022", // recommandé avec NodeNext
    "outDir": "dist",
    "rootDir": ".", // racine du projet
    "baseUrl": ".", // racine du projet
    "paths": {
      "@/*": ["*"] // @/module → racine/module
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*"]
}
